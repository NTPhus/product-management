extends ../../layouts/default
include ../../mixins/box-head

block main 
    .container.my-3 

        include ../../partials/list-btn-users

        .row 
            .col-12 
                +box-head("Danh sách bạn bè")
        
        .row 
            each user in friends
                .col-4
                    div(class="box-user add")
                        div(class="inner-avatar")
                            img(
                                src=(user.avatar ? user.avatar : "/images/avatar.jfif")
                                alt=user.fullname
                            )
                        div(class="inner-info")
                            div(class="inner-name") #{user.fullname}
                            div(class="inner-buttons")
                                a(
                                    href="#"
                                    class="btn btn-sm btn-primary mr-1"
                                ) Nhắn tin
                        div(
                            class="inner-status"
                            status=user.statusOnline
                        ) <i class="fa-solid fa-circle"></i>
block script 
    script(src="/js/users.js")