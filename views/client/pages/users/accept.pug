extends ../../layouts/default
include ../../mixins/box-head

block main 
    .container.my-3 

        include ../../partials/list-btn-users

        .row 
            .col-12 
                +box-head("Lời mời đã nhận")
        
        .row(data-users-accept=user.id)
            each user in users
                .col-4(user-id=user.id)
                    div(class="box-user")
                        div(class="inner-avatar")
                            img(
                                src=(user.avatar ? user.avatar : "/images/avatar.jfif")
                                alt=user.fullname
                            )
                        div(class="inner-info")
                            div(class="inner-name") #{user.fullname}
                            div(class="inner-buttons")
                                button(
                                    class="btn btn-sm btn-primary mr-1"
                                    btn-accept-friend=user.id
                                ) Chấp nhận 
                                button(
                                    class="btn btn-sm btn-secondary mr-1"
                                    btn-refuse-friend=user.id
                                ) Từ chối
                                button(
                                    class="btn btn-sm btn-secondary mr-1"
                                    btn-deleted-friend=user.id
                                    disabled
                                ) Đã xóa
                                button(
                                    class="btn btn-sm btn-secondary mr-1"
                                    btn-accepted-friend=user.id
                                    disabled
                                ) Đã chấp nhận
            
block script 
    script(src="/js/users.js")