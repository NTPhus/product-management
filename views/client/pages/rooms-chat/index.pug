extends ../../layouts/default
include ../../mixins/box-head

block main 
    .container.my-3 
        .row 
            .col-12 
                +box-head("Thông tin tài khoản")
            
        .row.mb-3 
            .col-12
            a(
                href="/rooms-chat/create"
                class="btn btn-sm btn-success mr-1"
            ) Tạo phòng chat 

        .row
            .col-6 
                div(class="box-room")
                    div(class="inner-avatar")
                        img(
                            src=""
                            alt="Phòng abc"
                        )
                    div(class="inner-info")
                        div(class="inner-name") Phòng abc 
                        div(class="inner-buttons")
                            a(
                                href="#"
                                class="btn btn-sm btn-primary mr-1"
                            ) Nhắn tin